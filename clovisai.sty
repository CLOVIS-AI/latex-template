% Underlined hyperlink
\newcommand{\hrefu}[2]{\underline{\href{#1}{#2}}}

% Better refs
\newcommand{\cnref}[2][]{``\ifthenelse{\equal{#1}{}}{\nameref{#2}}{\hyperref[#2]{#1}}''}

\newcommand{\cnpref}[2][]{\cnref[#1]{#2}
	\vpageref{#2}}

\newcommand{\cref}[2][]{§\ref{#2}
	\cnpref[#1]{#2}}

\newcommand{\cf}[1]{(cf.~\cref{#1})}

